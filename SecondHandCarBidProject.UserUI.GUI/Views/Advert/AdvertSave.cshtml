@{
    ViewBag.Title = "AdvertSave";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@*<div class="container" style="background-color: #8c0303">*@
<div class="container-md">
<form action="#">
    <div class="row form-group">

        <div class="col-md-12">
            <label class="text-black" for="advert">İlan Başlığı</label>
            <input type="advert" id="advert" class="form-control">
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-12">
            <label class="text-black" for="message">İlan Açıklaması</label>
            <textarea name="message" id="message" cols="30" rows="7" class="form-control" placeholder="Lütfen ekleyeceğiniz ilan hakkında bilgi veriniz..."></textarea>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-12">
            <input type="submit" value="İlan Ekle" class="btn btn-secondary py-2 px-4 text-white">
        </div>
    </div>
</form>
</div>
