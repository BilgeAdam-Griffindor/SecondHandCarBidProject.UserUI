@model SecondHandCarBidProject.UserUI.Dto.DTOs.UserDtos.BaseUserAddPageDTO
@{
    Layout = null;
}


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Hesap Oluştur</title>

    <!-- Font Icon -->
    <link href="~/Content/Login/fonts/material-icon/css/material-design-iconic-font.min.css" rel="stylesheet" />
    <!-- Main css -->
    <link href="~/Content/Login/css/style.css" rel="stylesheet" />
</head>
<body>

    <div class="main" style="background: #232323">


        <!-- Sign up form -->
        <section class="signup" style="background: #232323">
            <div class="container" style="box-shadow: 5px 10px 40px;">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Kayıt Ol</h2>
                        @using (Html.BeginForm("Register", "Login", FormMethod.Post, new { id = "login-form", @class = "register-form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                @Html.TextBoxFor(m => m.FirstName, new { placeholder = "İsminiz" })
                                @Html.ValidationMessageFor(m => m.FirstName, "", new { @style = "color:red" })
                            </div>
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                @Html.TextBoxFor(m => m.LastName, new { placeholder = "Soyadınız" })
                                @Html.ValidationMessageFor(m => m.LastName, "", new { @style = "color:red" })
                            </div>
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                @Html.TextBoxFor(m => m.Username, new { placeholder = "Kullanıcı Adınız" })
                                @Html.ValidationMessageFor(m => m.Username, "", new { @style = "color:red" })
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email Adresiniz" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color:red" })
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                @Html.PasswordFor(m => m.PasswordSalt, new { placeholder = "Şifreniz" })
                                @Html.ValidationMessageFor(m => m.PasswordSalt, "", new { @style = "color:red" })
                            </div>
                            <div class="form-group">
                                <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Lütfen Şifrenizi Tekrar Giriniz" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @style = "color:red" })
                            </div>
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                @Html.TextBoxFor(m => m.PhoneNumber, new { placeholder = "Telefon Numaranız" })
                                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @style = "color:red" })
                            </div>
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                @Html.DropDownListFor(x => x.AddressInfoId, Model.Cities, new { @style = "width:303px;height:25px;text-align:center" })
                                @*<input type="text" name="name" id="name" placeholder="Adresiniz" />*@
                                @Html.ValidationMessageFor(m => m.AddressCityInfoId, "", new { @style = "color:red" })
                            </div>
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                @Html.DropDownListFor(x => x.AddressInfoId, Model.District, new { @style = "width:303px;height:25px;;text-align:center" })
                                @*<input type="text" name="name" id="name" placeholder="Adresiniz" />*@
                                @Html.ValidationMessageFor(m => m.AddressInfoId, "", new { @style = "color:red" })
                            </div>
                            <div class="form-group">
                                @Html.CheckBoxFor(m => m.KVKKChecked, new { @style = "display:inline-block" })
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>Bütün Kullanıcı Koşullarınızı <a href="#" class="term-service">Kabul Ediyorum</a></label>
                            </div>
                            <div class="form-group">
                                @Html.CheckBoxFor(m => m.isCorporate, new { @style = "display:inline-block" })
                                <label for="agree-term" class="label-agree-term">Kurumsal Üye</label>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" style="background-color: #7fad39; value="Kayıt Ol" />
                            </div>
                        }
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/Content/Login/images/signup-image.jpg" alt="sing up image"></figure>
                        <a href="/Login/LogIn" class="signup-image-link">Zaten Üyeyim</a>
                    </div>
                </div>
            </div>
        </section>

    </div>

    <script src="~/Content/Login/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/Login/js/main.js"></script>
</body>
</html>

